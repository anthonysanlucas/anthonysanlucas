---
interface Props {
  class?: string
  title: string
}

const { title } = Astro.props
---

<article
  class={`
  ${Astro.props.class}
  relative rounded-md
  backdrop-blur-md
  border border-black/10
  shadow-inner shadow-white/10
  overflow-hidden
  group
`}>
  <div
    class="absolute z-10 bottom-0 top-0 w-full h-full
    bg-gradient-to-b from-transparent from-50% via-neutral-950/50 to-neutral-950/80">
  </div>

  <slot name="image" />

  <div class="relative select-none flex flex-col gap-1 p-4 text-lg z-20 justify-end h-full">
    <h2 class="text-2xl font-semibold text-balance text-white mb-4 uppercase">
      {title}
    </h2>

    <slot name="techTags" />
  </div>
</article>
